<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyMedicamentsApp.UI"
             xmlns:converters="clr-namespace:MyMedicamentsApp.UI.Converters"
             x:Class="MyMedicamentsApp.UI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:ExpirationStatusConverter x:Key="ExpirationStatusConverter" />
            <converters:ExpirationStatusColorConverter x:Key="ExpirationStatusColorConverter" />
            <converters:ExpirationBackgroundConverter x:Key="ExpirationBackgroundConverter" />
            <converters:ExpirationTextConverter x:Key="ExpirationTextConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
