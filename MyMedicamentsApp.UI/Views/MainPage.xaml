<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MyMedicamentsApp.UI.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MyMedicamentsApp.UI.ViewModels"
             Title="My Medicaments">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Padding="16" BackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" 
                   Text="My Medicaments" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            
            <Button Grid.Column="1" 
                    Text="Add New" 
                    Command="{Binding AddNewCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="16,8"/>
        </Grid>

        <!-- Medicaments List -->
        <RefreshView Grid.Row="1" 
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsLoading}">
            
            <CollectionView ItemsSource="{Binding Medicaments}"
                           SelectionMode="Single">
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="16,8" 
                               Padding="16" 
                               CornerRadius="12"
                               HasShadow="True"
                               BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DataContext, Converter={StaticResource ExpirationBackgroundConverter}, ConverterParameter={Binding .}}">
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Photo -->
                                <Frame Grid.Row="0" Grid.Column="0" 
                                       Padding="0" 
                                       CornerRadius="8" 
                                       HasShadow="False"
                                       Margin="0,0,12,0"
                                       IsVisible="{Binding PhotoPath, Converter={StaticResource StringToBoolConverter}}">
                                    <Image Source="{Binding PhotoPath}" 
                                           Aspect="AspectFill"
                                           WidthRequest="60" 
                                           HeightRequest="60"/>
                                </Frame>

                                <!-- Medicament Name and Category -->
                                <StackLayout Grid.Row="0" Grid.Column="1">
                                    <Label Text="{Binding Name}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DataContext, Converter={StaticResource ExpirationTextConverter}, ConverterParameter={Binding .}}"/>
                                    
                                    <Label Text="{Binding Category}" 
                                           FontSize="14" 
                                           TextColor="Gray"
                                           Margin="0,4,0,0"/>
                                </StackLayout>

                                <!-- Expiration Status -->
                                <Label Grid.Row="0" Grid.Column="2" 
                                       Text="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DataContext, Converter={StaticResource ExpirationStatusConverter}, ConverterParameter={Binding .}}"
                                       FontSize="12" 
                                       FontAttributes="Bold"
                                       TextColor="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DataContext, Converter={StaticResource ExpirationStatusColorConverter}, ConverterParameter={Binding .}}"
                                       VerticalOptions="Start"
                                       HorizontalOptions="End"/>

                                <!-- Description -->
                                <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding Description}" 
                                       FontSize="14" 
                                       TextColor="Gray"
                                       Margin="0,8,0,0"
                                       IsVisible="{Binding Description, Converter={StaticResource StringToBoolConverter}}"/>

                                <!-- Expiration Date -->
                                <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding ExpirationDate, StringFormat='Expires: {0:MMM dd, yyyy}'}" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       Margin="0,8,0,0"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Empty State -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="No medicaments found" 
                               FontSize="18" 
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                        <Label Text="Tap 'Add New' to add your first medicament" 
                               FontSize="14" 
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               Margin="0,8,0,0"/>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="1" 
                           IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
    </Grid>
</ContentPage> 